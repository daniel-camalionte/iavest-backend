#!/bin/bash
# post-merge: Exporta arquivos alterados após um merge para a pasta de staging/deploy

HOOKS_DIR="$(dirname "$0")"
source "${HOOKS_DIR}/_export_commit.sh"

COMMIT_HASH=$(git rev-parse --short HEAD)

# Arquivos alterados entre ORIG_HEAD (antes do merge) e HEAD (após o merge)
FILES=$(git diff ORIG_HEAD HEAD --name-only --diff-filter=ACMR)

export_commit "$COMMIT_HASH" "$FILES"
